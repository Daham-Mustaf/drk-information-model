@prefix drk: <https://w3id.org/drk/ontology/> .
@prefix drkr: <https://w3id.org/drk/resource/> .
@prefix void: <http://rdfs.org/ns/void#> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

###############################################
#Cultural Data Exchange Policies
###############################################

###############################################
# Scenario 1: Cultural API Access Management
###############################################
# Scenario Description:
# - The Augsburg State Theater provides a ShowTimes API
# - Access is restricted geographically to Germany
# - Time-limited access until May 10, 2025
# - Three types of subscribers have access rights
# - Access is managed through a TempoSpatialAccess policy


# ShowTimes API Asset
drkr:DE_Augsburg_STAugsburg_ShowtimesAPI a drk:ShowTimesAPI, odrl:Asset ;
    odrl:uid <https://w3id.org/drk/resource/DE_Augsburg_STAugsburg_ShowtimesAPI> ;
    dct:title "Augsburg Staatstheater ShowTimes API"@de ;
    dct:description "API providing showtimes data for Augsburg State Theater performances"@en ;
    odrl:hasPolicy drkr:DE_Augsburg_STAugsburg_TempoSpatialAccess .

# Data Provider Organization
drkr:DE_Augsburg_STAugsburg a odrl:Party, foaf:Organization ;
    odrl:uid <https://w3id.org/drk/resource/DE_Augsburg_STAugsburg> ;
    rdfs:label "Augsburg State Theater"@en ;
    dct:description "Cultural organization managing the ShowTimes API"@en .

# Data Consumers
drkr:DE_Augsburg_RegionalNewspaper a odrl:Party ;
    odrl:uid <https://w3id.org/drk/resource/DE_Augsburg_RegionalNewspaper> ;
    rdfs:label "Regional Newspaper"@en ;
    skos:definition "Local news organization with API access rights"@en .

drkr:DE_Augsburg_CultureResearchInstitute a odrl:Party ;
    odrl:uid <https://w3id.org/drk/resource/DE_Augsburg_CultureResearchInstitute> ;
    rdfs:label "Culture Research Institute"@en ;
    skos:definition "Research organization studying cultural events"@en .

drkr:DE_Bavaria_CulturalPlatform a odrl:Party ;
    odrl:uid <https://w3id.org/drk/resource/DE_Bavaria_CulturalPlatform> ;
    rdfs:label "Cultural Platform Bavaria"@en ;
    skos:definition "Bavarian cultural events aggregator"@en .

# Temporal and Spatial Access Policy
drkr:DE_Augsburg_STAugsburg_TempoSpatialAccess a odrl:Policy ;
    odrl:uid <https://w3id.org/drk/resource/DE_Augsburg_STAugsburg_TempoSpatialAccess> ;
    rdfs:label "Geographical and Time-Based Access Policy"@en ;
    odrl:permission [
        a odrl:Permission ;
        odrl:assigner drkr:DE_Augsburg_STAugsburg ;
        odrl:assignee drkr:DE_Augsburg_RegionalNewspaper, 
                     drkr:DE_Augsburg_CultureResearchInstitute,
                     drkr:DE_Bavaria_CulturalPlatform ;
        odrl:action odrl:use ;
        odrl:target drkr:DE_Augsburg_STAugsburg_ShowtimesAPI ;
        odrl:constraint [
            a odrl:Constraint ;
            odrl:leftOperand odrl:spatial ;
            odrl:operator odrl:eq ;
            odrl:rightOperand "DE"^^xsd:string ;
            rdfs:comment "Access restricted to Germany"@en
        ] ,
        [
            a odrl:Constraint ;
            odrl:leftOperand odrl:dateTime ;
            odrl:operator odrl:lteq ;
            odrl:rightOperand "2025-05-10T23:59:59"^^xsd:dateTime ;
            rdfs:comment "Access expires on May 10, 2025"@en
        ] 
    ] .
