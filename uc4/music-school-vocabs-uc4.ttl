# Instruction Place
:MusicInstructionPlace
    a owl:Class ;
    rdfs:label "Music Instruction Place"@en ;
    skos:definition "Location types for music instruction"@en ;
    owl:oneOf ( :OnlineInstruction :OfflineInstruction ) .

:OnlineInstruction
    a :MusicInstructionPlace ;
    rdfs:label "Online"@en ;
    skos:definition "Virtual instruction through digital platforms"@en .

:OfflineInstruction
    a :MusicInstructionPlace ;
    rdfs:label "Offline"@en ;
    skos:definition "In-person physical instruction"@en .

# Instruction Categories
:MusicInstructionType
    a owl:Class ;
    rdfs:label "Music Instruction Type"@en ;
    skos:definition "Types of music instruction sessions"@en ;
    owl:oneOf (
          :TrialInstruction
          :SingleInstruction
          :RepeatInstruction
      ) .

:TrialInstruction
    a :MusicInstructionType ;
    rdfs:label "Trial Lesson"@en ;
    skos:prefLabel "Trial Lesson"@en ;
    skos:definition "A free or discounted introductory lesson for new learners."@en .

:SingleInstruction
    a :MusicInstructionType ;
    rdfs:label "Single Lesson"@en ;
    skos:prefLabel "Single Lesson"@en ;
    skos:definition "A one-time, standalone lesson without recurring sessions."@en .

:RepeatInstruction
    a :MusicInstructionType ;
    rdfs:label "Repeat Lesson"@en ;
    skos:prefLabel "Repeat Lesson"@en ;
    skos:definition "A recurring lesson for ongoing learning."@en .

# Duration Options
:MusicInstructionDuration
    a owl:Class ;
    rdfs:label "Music Instruction Duration"@en ;
    skos:definition "Standard durations for music instruction"@en ;
    owl:oneOf (
          :Duration35Minutes
          :Duration45Minutes
          :Duration60Minutes
      ) .
:Duration35Minutes
    a :MusicInstructionDuration ;
    rdfs:label "35 Minutes"@en ;
    schema:duration "PT35M"^^xsd:duration .

:Duration45Minutes
    a :MusicInstructionDuration ;
    rdfs:label "45 Minutes"@en ;
    schema:duration "PT45M"^^xsd:duration .

:Duration60Minutes
    a :MusicInstructionDuration ;
    rdfs:label "60 Minutes"@en ;
    schema:duration "PT60M"^^xsd:duration .

# Status Tracking
:MusicInstructionStatus
    a owl:Class ;
    rdfs:label "Music Instruction Status"@en ;
    skos:definition "Status states of music instruction"@en ;
    owl:oneOf (
          :PendingStatus     # Awaiting confirmation
          :AcceptedStatus    # Confirmed by all parties
          :CompletedStatus   # Lesson finished
          :CanceledStatus    # Lesson cancelled
      ) .

# Status Instances
:PendingStatus
    a :MusicInstructionStatus ;
    rdfs:label "Pending Status"@en ;
    skos:definition "Instruction awaiting confirmation from participants"@en ;
    schema:identifier "pending" ;
    schema:actionStatus schema:PotentialActionStatus .

:AcceptedStatus
    a :MusicInstructionStatus ;
    rdfs:label "Accepted Status"@en ;
    skos:definition "Instruction confirmed by all required parties"@en ;
    schema:identifier "accepted" ;
    schema:actionStatus schema:ActiveActionStatus .

:CompletedStatus
    a :MusicInstructionStatus ;
    rdfs:label "Completed Status"@en ;
    skos:definition "Instruction has been successfully delivered"@en ;
    schema:identifier "completed" ;
    schema:actionStatus schema:CompletedActionStatus .

:CanceledStatus
    a :MusicInstructionStatus ;
    rdfs:label "Canceled Status"@en ;
    skos:definition "Instruction has been cancelled and will not occur"@en ;
    schema:identifier "canceled" ;
    schema:actionStatus schema:FailedActionStatus .

