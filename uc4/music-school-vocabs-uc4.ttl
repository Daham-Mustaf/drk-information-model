# Experience Level System
:MusicExperienceLevel
    a owl:Class ;
    rdfs:label "Music Experience Level"@en ;
    skos:definition "Standard levels of music experience classification"@en ;
    owl:oneOf (
        :BeginnerLevel
        :IntermediateLevel
        :AdvancedLevel
    ) .

# Experience Level Instances
:BeginnerLevel
    a :MusicExperienceLevel ;
    rdfs:label "Beginner Level"@en ;
    skos:prefLabel "Beginner"@en ;
    skos:definition "Entry level with basic or no prior experience."@en .

:IntermediateLevel
    a :MusicExperienceLevel ;
    rdfs:label "Intermediate Level"@en ;
    skos:prefLabel "Intermediate"@en ;
    skos:definition "Medium level with some years of experience."@en .

:AdvancedLevel
    a :MusicExperienceLevel ;
    rdfs:label "Advanced Level"@en ;
    skos:prefLabel "Advanced"@en ;
    skos:definition "High level with significant experience and skill."@en .
