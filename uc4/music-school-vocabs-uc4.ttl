# Gender System
:MusicSchoolMemberGender
    a owl:Class ;
    rdfs:label "Music School Member Gender"@en ;
    skos:definition "Gender options for music school members"@en ;
    owl:oneOf (:MaleGender :FemaleGender :OtherGender) .

# Male Gender
:MaleGender
    a :MusicSchoolMemberGender ;
    rdfs:label "Male"@en ;
    skos:prefLabel "Male"@en ;
    skos:definition "A person identifying as male."@en ;
    owl:sameAs schema:Male .

# Female Gender
:FemaleGender
    a :MusicSchoolMemberGender ;
    rdfs:label "Female"@en ;
    skos:prefLabel "Female"@en ;
    skos:definition "A person identifying as female."@en ;
    owl:sameAs schema:Female .

# Other Gender
:OtherGender
    a :MusicSchoolMemberGender ;
    rdfs:label "Other"@en ;
    skos:prefLabel "Other"@en ;
    skos:definition "A person identifying with another gender not listed."@en .

