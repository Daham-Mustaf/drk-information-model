# change to SKOS
# Language System
:MusicSchoolLanguage
    a owl:Class ;
    rdfs:label "Music School Language"@en ;
    skos:definition "Available languages in the music school system"@en ;
    owl:oneOf ( :EnglishLanguage :GermanLanguage) .

# Language Instances
:EnglishLanguage
    a :MusicSchoolLanguage ;
    rdfs:label "English"@en ;
    skos:prefLabel "English"@en .

:GermanLanguage
    a :MusicSchoolLanguage ;
    rdfs:label "German"@en ;
    skos:prefLabel "German"@en .

